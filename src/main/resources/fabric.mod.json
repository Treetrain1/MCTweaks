{
  "schemaVersion": 1,
  "id": "mctweaks",
  "version": "${version}",

  "name": "FrozenBlock's MC Tweaks",
  "description": "Includes many tweaks to Minecraft that improve immersion and the gameplay experience.",
  "authors": [
    "FrozenBlock"
  ],
  "contact": {
    "homepage": "https://github.com/Treetrain1/MCTweaks",
    "sources": "https://github.com/Treetrain1/MCTweaks",
    "issues": "https://github.com/Treetrain1/MCTweaks/issues"
  },

  "license": "LGPL-3",
  "icon": "assets/mctweaks/icon.png",

  "accessWidener": "mctweaks.accesswidener",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.frozenblock.mctweaks.MCTweaks"
    ],
    "client": [
      "net.frozenblock.mctweaks.MCTweaksClient"
    ],
    "modmenu": [
      "net.frozenblock.mctweaks.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "mctweaks.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.8",
    "frozenlib": ">=1.1.3.1-",
    "cloth-config": "*",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  }
}
